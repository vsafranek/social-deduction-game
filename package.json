{
  "name": "social-deduction-game",
  "version": "1.0.0",
  "description": "Sociální dedukční hra s moderátorem a mobilními hráči",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "vite": "vite --host 0.0.0.0",
    "electron": "wait-on http://localhost:5173 && electron .",
    "electron:dev": "cross-env NODE_ENV=development wait-on http://localhost:5173 && electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"npm:vite\" \"npm:electron:dev\"",
    "start": "cross-env NODE_ENV=production concurrently \"npm:vite\" \"npm:electron\"",
    "build": "vite build",
    "package": "npm run build && electron-builder",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "cross-env NODE_ENV=test SKIP_INTEGRATION_TESTS=true jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "migrations:show": "node electron/db/runMigrations.js"
  },
  "dependencies": {
    "@ngrok/ngrok": "^1.5.2",
    "@supabase/supabase-js": "^2.39.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.5",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "jest": "^30.2.0",
    "vite": "^5.4.0",
    "wait-on": "^8.0.0"
  }
}
